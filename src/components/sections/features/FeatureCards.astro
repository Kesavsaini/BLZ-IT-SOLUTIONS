---
import Icon from "@/components/ui/icons/Icon.astro";

// import { Icon } from 'astro-icon';
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 p-8 max-w-7xl mx-auto">
    <div class="relative bg-white/10 dark:bg-white/5 backdrop-blur-lg rounded-2xl p-8 text-center border border-white/20 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl shadow-md">
        <div class="bg-gradient-to-br from-white/20 to-white/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
            <Icon name="mdi:tools" class="w-8 h-8 text-primary-600" />
        </div>
        <h3 class="text-2xl font-semibold mb-4 text-gray-900 dark:text-white">Professional Tools</h3>
        <p class="text-gray-700 dark:text-gray-300 leading-relaxed">High-quality tools for every project, ensuring precision and reliability in your work.</p>
    </div>

    <div class="relative bg-white/10 dark:bg-white/5 backdrop-blur-lg rounded-2xl p-8 text-center border border-white/20 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl shadow-md">
        <div class="bg-gradient-to-br from-white/20 to-white/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
            <Icon name="mdi:truck-delivery" class="w-8 h-8 text-primary-600" />
        </div>
        <h3 class="text-2xl font-semibold mb-4 text-gray-900 dark:text-white">Fast Delivery</h3>
        <p class="text-gray-700 dark:text-gray-300 leading-relaxed">Next-day delivery available on all orders placed before 3 PM, anywhere in the country.</p>
    </div>

    <div class="relative bg-white/10 dark:bg-white/5 backdrop-blur-lg rounded-2xl p-8 text-center border border-white/20 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl shadow-md">
        <div class="bg-gradient-to-br from-white/20 to-white/10 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
            <Icon name="mdi:account-group" class="w-8 h-8 text-primary-600" />
        </div>
        <h3 class="text-2xl font-semibold mb-4 text-gray-900 dark:text-white">Expert Support</h3>
        <p class="text-gray-700 dark:text-gray-300 leading-relaxed">24/7 customer support from our team of experienced professionals to assist you.</p>
    </div>
</div>