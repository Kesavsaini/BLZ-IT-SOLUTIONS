---
interface Props {
  title: string;
  description: string;
  icon: string;
  className:string;
}

const { title, description, icon, className } = Astro.props;
---
<div class=`h-[28rem] flex justify-end items-end rounded-3xl ${className}  bg-cover bg-center`>
<div class={`flex flex-col text-black dark:text-white items-center gap-3 rounded-3xl px-6 py-8 bg-gradient-to-br from-blue-400 to-purple-400 dark:from-blue-600 dark:to-purple-600 backdrop-blur-lg shadow-lg bg-cover bg-center h-52 w-full`}>
  <Fragment set:html={icon} />
  <h3 class="text-xl font-medium ">{title}</h3>
  <p class="text-center text-neutral-800 dark:text-neutral-200">
    {description}
  </p>
</div>
</div>