---
import { Image } from "astro:assets";
import SolutionCard from "./SolutionCard.astro";

const solutions = [
  {
    title: "Web/App Development",
    description: "Custom web and mobile solutions built with cutting-edge technologies",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="#60a5fa">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>`,
    class: "bg-[url('https://images.pexels.com/photos/5082576/pexels-photo-5082576.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1')]"
  },
  {
    title: "Digital Marketing",
    description: "Strategic digital marketing to boost your online presence",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="#fb923c">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z" />
          </svg>`,
    class: "bg-[url('https://images.pexels.com/photos/1111316/pexels-photo-1111316.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1')]"
  },
  {
    title: "Graphic Designing",
    description: "Creative design solutions that capture your brand's essence",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="#c084fc">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>`,
    class: "bg-[url('https://images.pexels.com/photos/2911521/pexels-photo-2911521.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1')]"
  },
  {
    title: "IT Consulting",
    description: "Expert guidance for your technology strategy and implementation",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="#2dd4bf">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>`,
    class: "bg-[url('https://images.pexels.com/photos/8191966/pexels-photo-8191966.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1')]"
  }
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col items-center gap-8 sm:gap-10">
      <div class="mx-auto max-w-3xl text-center ">
        <h2 class="text-3xl font-medium tracking-tight sm:text-4xl text-neutral-800 dark:text-neutral-200">Our IT Solutions</h2>
        <p class="mt-4 text-lg text-neutral-600 dark:text-neutral-400">
          Comprehensive IT services tailored to drive your business forward
        </p>
      </div>
      <div class="grid w-full grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
        {solutions.map((solution) => (
          <SolutionCard
            title={solution.title}
            description={solution.description}
            icon={solution.icon}
            className={solution.class}
          />
        ))}
      </div>
    </div>
  </div>
</section>