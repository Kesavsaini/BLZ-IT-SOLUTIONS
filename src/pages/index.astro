---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
// import heroImage from "@images/hero-image.avif";
import heroImage from "@images/heroimg4.png"
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/featureimg2.png";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import FeatureCards from "@/components/sections/features/FeatureCards.astro";
import Solutions from "@/components/sections/solutions/solutions.astro";
import placeholder from "@images/placeholder.svg";
import Tech_stack from "@images/webd2.jpg";
import techstack from "@images/techstack.jpg";
import aisol from "@images/aisol.jpg"
import mordentech from "@images/mordentech.jpg"



const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Get Your First Website for 30% off"
    url="#"
  />

  <HeroSection
    title=`Blazing the Path to Smarter <span
        class="text-blue-500 dark:text-blue-400">IT Solutions</span>`
    subTitle="Turning Complex Challenges into Simple, Scalable IT Solutions that Drive Real Impact for Your Business"
    primaryBtn="Contact Us"
    primaryBtnURL="/contact"
    secondaryBtn="Schedule a Call"
    secondaryBtnURL="https://cal.com/kesavsaini/quick-project-call-blz-it-solutions"
    withReview={false}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`From Over <span class="font-bold">12.8k</span> Reviews`
    src={heroImage}
    alt="Stack of ScrewFast product boxes containing assorted hardware tools"
  />

  <ClientsSection
    title="Trusted by many"
    subTitle="Experience the reliability chosen by industry giants."
  />

  <Solutions/>

  <FeaturesGeneral
    title="Why Choose Us?"
    subTitle="Weâ€™re dedicated to simplifying technology for your business. Our team delivers dependable solutions, personalized support, and a partnership you can trust to help you achieve your goals efficiently and effectively."
    src={featureImage}
    alt="Why choose us image"
    features={features}
  />



  <FeaturesNavs
    title=`Next-Gen Tech for  <span class="text-blue-500 dark:text-blue-400">Smarter</span> Solutions.`
    tabs={[
      {
        heading: "Up-to-date Tech stack",
        content:
          "We stay ahead of the curve by leveraging the latest tools, frameworks, and technologies to deliver solutions that are efficient, scalable, and secure. Our constantly evolving tech stack ensures that your projects benefit from cutting-edge advancements and industry best practices.",
        svg: "tech",
        src: techstack,
        alt: "blue and black heavy equipment on brown grass field",
        first: true,
      },
      {
        heading: "Modern AI Solutions",
        content:
          "Harness the power of artificial intelligence to transform your business operations. From predictive analytics and smart automation to natural language processing and machine learning, our AI-driven solutions are designed to boost efficiency, drive innovation, and create personalized user experiences.",
        svg: "ai",
        src: aisol,
        alt: "A screenshot or graphic representation of the intuitive dashboard",
        second: true,
      },
      {
        heading: "Future-Proof Solutions",
        content:
          "Our solutions are built with adaptability in mind, ensuring they remain relevant as technology evolves. By integrating scalability, flexibility, and the latest advancements, we create systems that grow with your business and stand the test of time.",
        svg: "future",
        src: mordentech,
        alt: "Gray metal building frame near tower crane during daytime",
      },
    ]}
  />

  <TestimonialsSection
    title="Get Your Project Done Right, the Best Way!"
    subTitle="Providing reliable IT solutions that are customized to meet your business needs, ensuring quality and innovation every step of the way."
    ;
    testimonials={[
      {
        content:
          "Working with Blzit has been fantastic! Their IT solutions are spot on, and the support is always quick and helpful. Highly recommend them for anyone looking to improve their tech setup!",
        author: "Suresh Kumar",
        role: "Small Business Owner",
        avatarSrc:
          "https://images.unsplash.com/photo-1649433658557-54cf58577c68?q=80&w=1364&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
      },
    ]}
    statistics={[
      {
        count: "10+",
        description:
          "clients served with tailored IT solutions",
      },
      {
        count: "24/7",
        description:
          "round-the-clock technical support and monitoring services",
      },
      {
        count: "98%",
        description:
          "customer satisfaction rate across all projects",
      },
      {
        count: "100%",
        description: "commitment to delivering tailored solutions",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title={"Got Questions? <br/> We've Got Answers!"} faqs={faqs} />
    
  <HeroSectionAlt
    title=`Let's Discuss Your Project``
    subTitle="Ready to take your business to the next level? Let's discuss your project and see how we can help you achieve your goals."
    url="#"
  />
</MainLayout>
