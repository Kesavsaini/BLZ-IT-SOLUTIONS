---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";
import webd1 from "@images/webd1.jpg";
import webd2 from "@images/webd2.jpg";
import dm1 from "@images/dm1.jpg";
import gd1 from "@images/gd1.jpg";
import gd3 from "@images/gd3.jpg";
import itc1 from "@images/itc1.jpg";
import BS1 from "@images/BS1.jpg";
import BS2 from "@images/BS2.jpg";

interface  Service {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
  className: string;
}

const articles: Service[] = [
  {
    isRightSection: true,
    title: "Web & App Development Excellence",
    subTitle:
      "Transform your ideas into reality with our cutting-edge web and app development services. Our experienced developers create responsive, user-friendly, and scalable applications that fit your business needs. From ideation to launch, we ensure seamless development and high-performance delivery.",
    single: false,
    imgOne: webd1,
    imgOneAlt: "Web and mobile app development process.",
    imgTwo: webd2,
    imgTwoAlt: "Developers working on a mobile app.",
    className:"bg-gradient-to-r from-zinc-300 to-white dark:from-zinc-950 dark:to-zinc-800"
    // [#2563eb]
  },
  {
    isRightSection: false,
    title: "Digital Marketing Strategies that Drive Results",
    subTitle:
      "Grow your online presence with our comprehensive digital marketing services. From SEO optimization to social media marketing, we develop tailored strategies that target your audience, boost engagement, and increase conversions. Let us help you turn clicks into customers.",
    img: dm1,
    imgAlt: "Digital marketing strategies in action.",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
    className:"bg-gradient-to-r from-white to-zinc-300 dark:from-zinc-800 dark:to-zinc-950",
    // [#ea580c]
  },
  {
    isRightSection: true,
    title: "Creative Graphic Design for Stunning Visuals",
    subTitle:
      "Our creative team delivers visually appealing designs that capture your brandâ€™s essence. From logo design to complete branding packages, we create unique graphics that help your business stand out and make a lasting impression.",
    single: false,
    imgOne: gd1,
    imgOneAlt: "Creative designer working on graphic design.",
    imgTwo: gd3,
    imgTwoAlt: "Branding designs and color palettes.",
    className:"bg-gradient-to-r from-zinc-300 to-white dark:from-zinc-950 dark:to-zinc-800"
    // [#9333ea]
  },
  {
    isRightSection: false,
    title: "Expert IT Consultation for Growth",
    subTitle:
      "Navigating the ever-evolving tech landscape can be challenging. Our IT consultation services provide you with the expertise you need to make informed decisions on technology investments, infrastructure, and digital transformation strategies. We offer customized advice to help you drive efficiency and innovation.",
    img: itc1,
    imgAlt: "IT consultant advising clients on technology solutions.",
    className:"bg-gradient-to-r from-white to-zinc-300 dark:from-zinc-800 dark:to-zinc-950",
    // [#0d9488]
  },
  {
    isRightSection: true,
    title: "Tailored Solutions for Business Challenges",
    subTitle:
      "At our IT solutions company, we offer personalized strategies that address your specific business needs. Whether you're a startup or an enterprise, we develop custom solutions in software development, digital marketing, and IT infrastructure to enhance your business operations and drive success.",
    single: false,
    imgOne: BS1,
    imgOneAlt: "Custom business IT solutions in action.",
    imgTwo: BS2,
    imgTwoAlt: "Technological solutions for businesses.",
    btnExists: true,
    btnTitle: "Read More",
    btnURL: "#",
    className:"bg-gradient-to-r from-zinc-300 to-white dark:from-zinc-950 dark:to-zinc-800",
    // [#a3e635]
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://blzit.in/services",
    "url": "https://blzit.in/services",
    "name": "All IT Services | Blzit",
    "description": "Blz it Soltions provide solution to all your IT needs",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://blzit.in",
        "name": "Blzit",
        "description": "All in one place. Blzit offers many types of Services in wide range of categories",
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Our Services"
    subTitle="We offer a wide range of services to meet your specific needs, ensuring your success in the digital world."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  <div class="flex flex-col gap-16">
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
          className={article.className}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
          className={article.className}
        />
      );
    })
  }
  </div>
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="By the Numbers"
    subTitle="We are proud to offer a wide range of services to meet your specific needs, ensuring your success in the digital world."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate reccomends us"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "5,000+",
        description: "Satisfied clients",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  />
</MainLayout>
